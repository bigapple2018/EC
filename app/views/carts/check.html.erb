<div class="container">
  <div class="row">
    <%= form_tag(cart_confirm_path) do %>
    <div class="col-lg-9">
      <div class="heading">
        <p>購入手続き</p>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="heading">
            <p>ユーザ情報</p>
          </div>
          <div class="row">
            <div class="col-lg-3">
              <p>ユーザー名</p>
            </div>
            <div class="col-lg-9">
              <%= "#{@user.last_name} #{@user.first_name}" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-3">
              <p>送付先</p>
            </div>
            <div class="col-lg-9">
              <%= radio_button_tag("distination",0)%>
              <%= label_tag("distination_0","#{@user.postal_code}#{@user.address}") %>
              <% if !@subaddresses.nil? %>
                <% @subaddresses.each do |subaddress| %>
                <div>
                  <%= radio_button_tag("distination",subaddress.id)%>
                  <%= label_tag("distination_#{subaddress.id}","#{subaddress.sub_postal_code}#{subaddress.sub_address}") %>
                </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="heading">
            <p>支払い方法</p>
          </div>
          <% @payment.each do |pay| %>
            <%= radio_button_tag("payment",pay.id) %>
            <%= label_tag("payment_#{pay.id}",pay.payment_name)%>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="heading">
            <p>カート詳細</p>
          </div>
          <table class="table cart_detail_tbl">
            <% @cart.item_carts.each do |item_cart| %>
              <tr>
                <td><%= attachment_image_tag item_cart.item, :image, :fill, 200, 200, format: 'png' %></td>
                <td><%= "#{item_cart.item.artist}/#{item_cart.item.title_name}"%></td>
                <td>¥<%= item_cart.item.price.to_s(:delimited) %></td>
                <td><%= item_cart.count %>個</td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="row">
        <div class="heading">
          <p>商品小計(数量)</p>
        </div>
      </div>
      <div class="row">
       <div class="col-lg-6 cart_summary">
         合計金額
       </div>
       <div class="col-lg-6 cart_summary">
         ¥<%= @summary_price.to_s(:delimited) %>
         <%= hidden_field_tag 'summary[price]',@summary_price %>
       </div>
      </div>
      <div class="row">
        <div class="col-lg-6 cart_summary">
          合計個数
        </div>
        <div class="col-lg-6 cart_summary">
          <%= @summary_count %>個
          <%= hidden_field_tag 'summary[count]',@summary_count %>
        </div>
      </div>
      <div class="row">
        <div class="cart_summary">
          <%= link_to "キャンセル", "#" ,class:"btn red-gray-btn" %><br>
        </div>
        <div class="cart_summary">
          <%= submit_tag "購入確定", "data-confirm" => "購入を確定しますか", class: "btn red-btn" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
