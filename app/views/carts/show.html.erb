<div class="container">
	<table class="table">
		<thead>
			<tr>
				<h3>カート詳細</h3>
				<td>画像</td>
				<td>アーティスト名/アルバム名</td>
				<td>単価</td>
				<td>個数</td>
			</tr>
		</thead>
			<tbody>
				<% @cart.item_carts.each do |item_cart| %>
					<tr>
						<td><%= attachment_image_tag item_cart.item, :image, :fill, 90, 90, format: 'png' %></td>
						<td><%= link_to "#{item_cart.item.artist}/ #{item_cart.item.title_name}" %></td>
						<td>¥<%= item_cart.item.price.to_s(:delimited) %></td>
						<td><%= select_tag 'item_cart.count', options_for_select(["1", "2", "3", "4", "5"]) %> </td>
						<td><%= link_to "削除", items_cart_path(item_cart),method: :delete, class: "btn red-border-btn btn-xs"%></td>
					</tr>
			</tbody>
				<% end %>
	</table>
</div>