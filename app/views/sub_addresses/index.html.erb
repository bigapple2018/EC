<!-- サブアドレス一覧画面 -->
<div class="container">
  <h1>住所一覧</h1>
    <table class="table">
		<thead>
			<tr>
				<th> 〒</th>
				<th> 住所</th>
				<th> </th>
				<th> </th>
			</tr>
		</thead>
     <div class="row">
	   <div class="col-lg-4">
	   </div>
    	<div class="col-lg-4">
		 <tbody>
			<% @addresses.each do |sub_address| %>
				<tr>
					<td><%= sub_address.sub_postal_code %></td>
					<td><%= sub_address.sub_address %></td>
					<td><%= link_to "編集", edit_sub_address_path(sub_address.id), class: "btn btn-default" %></td>
					<td><%= link_to "削除",  sub_address_path(sub_address.id), method: :delete, "data-confirm" => "本当に消しますか", class: "btn btn-default" %></td>
				</tr>
			<% end %>
		 </tbody>
	    </div>
	    <div class="col-lg-4">
	    </div>
	 </div>
	</table>
	<div class="row">
		<div class="col-lg-4">
		</div>
		   <div class="col-lg-4">
			<%= link_to "戻る", user_path(current_user.id), class: "btn btn-default" %>
			<%= link_to "新規登録", new_sub_address_path, class: "btn btn-default" %>
		   </div>
		<div class="col-lg-4">
	    </div>
    </div>
</div>
<!-- サブアドレス一覧画面 -->
