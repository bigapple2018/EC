<!-- サブ住所新規投稿画面 -->
<div class ="container">
 <div class="row">
	   <div class="heading_box">
	    <h1 class="heading_address">住所新規登録</h1>
	  </div>
  <table class="address_table">
	<%= form_for(@address) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= @address.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<tbody>
		<tr>
			<td class="td_address1"><%= f.label :sub_postal_code, "〒" %></td>
			<td><%= f.text_field :sub_postal_code, :size => "30", :placeholder => "郵便番号" %></td>
		</tr>
		<tr>
			<td class="td_address2"><%= f.label :sub_address, "住所" %></td>
			<td class="td_address3"><%= f.text_field :sub_address, :size => "30", :placeholder => "住所" %></td>
		</tr>
	</tbody>
  </table>
         <div class="address_btn">
  		    <%= f.submit "登録", class: "btn red-btn btn-xs" %>
  		 </div>
	<% end %>
         <div class="address_btn2">
            <%= link_to "戻る", sub_addresses_path, class: "btn red-gray-btn btn-xs" %>
        </div>
 </div>
</div>
<!-- サブ住所新規投稿画面 -->
