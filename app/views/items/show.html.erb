<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'png', class: "item_image" %>
    </div>
    <div class="col-lg-9">
      <p><%= @item.title_name %></p>
      <p><%= @item.artist %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table>
        <tr>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <td><%= @item.genre.genre_name %></td>
        </tr>
        <tr>
          <td><%= @item.created_at %></td>
        </tr>
        <tr>
          <td><%= @item.label %></td>
        </tr>
        <tr>
          <!--在庫数表示切り替え-->
          <td>
            <% if @item.stock <= 5 %>
            　残りわずか
            <% else %>
              在庫あり
            <% end %>
          </td>
        </tr>
      </table>
      <ul>
        <% @item.cd_item.each do |cd| %>
          <% cd.song.each do |song| %>
            <li><%= song.song_title %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <% if user_signed_in? %>
        <%= link_to "カートに追加", "" ,class: "btn red-btn" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path ,class:"btn red-btn" %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn red-gray-btn" %>
      <% end %>
    </div>
  </div>
</div>
