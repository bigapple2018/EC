<div class="container">
	<h1 class="user_info">User Info</h1>
	     <table class="user_table">
			<tbody>
				<tr>
					<td> 名前</td>
					<td><%= @user.last_name %> <%= @user.first_name %></td>
				</tr>
				<tr>
					<td> 〒</td>
					<td><%= @user.postal_code %></td>
				</tr>
				<tr>
					<td> 住所</td>
					<td><%= @user.address %></td>
				</tr>
				<tr>
					<td> 電話番号</td>
					<td><%= @user.tell %></td>
				</tr>
			</tbody>
	    </table>
		 	<div class="btn_box">
				<%= link_to "編集", edit_user_path(current_user), class: "btn red-btn btn-xs" %>
				<%= link_to "購入履歴", order_histories_path, class: "btn red-gray-btn btn-xs" %>
				<%= link_to "住所管理", sub_addresses_path(current_user), class: "btn red-btn btn-xs" %>
			</div>
		<div class="leave_btn">
	        <%= link_to "退会", new_leave_path(current_user), class: "btn red-border-btn btn-xs " %>
	    </div>
</div>
