<div class ="container">
  <div class="row">
    <div class="col-md-12">
      <%= devise_error_messages! %>
      <div class="form-div">
        <h4>Sign up</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.text_field :last_name, autocomplete: "last_name",:placeholder => "名前(姓)" %>
            <%= f.text_field :first_name, autocomplete: "first_name",:placeholder => "名前(名)" %>
          </div>
          <div class="field">
            <%= f.text_field :last_kana, autocomplete: "last_kana",:placeholder => "名前(姓・カナ)" %>
            <%= f.text_field :first_kana, autocomplete: "first_kana",:placeholder => "名前(名・カナ)" %>
          </div>
          <div class="field">
            <%= f.text_field  :postal_code, autocomplete: "postal_code", :placeholder => "郵便番号",:class =>"postal-code-txt" %>
          </div>
          <div class="field">
            <%= f.text_area :address, autocomplete: "address", :placeholder => "住所" ,:class => "address-txt" %>
          </div>
          <div class="field">
            <%= f.text_field  :tell, autocomplete: "tell", :placeholder => "電話番号" ,:class => "tell-text" %>
          </div>
          <br>
          <div class="field">
            <%= f.email_field :email, autocomplete: "email", :placeholder => "メールアドレス",:class => "email-txt" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off" , :placeholder => "パスワード", :class => "password-txt" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "パスワード(確認)", :class => "password-txt" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn red-btn btn-xs" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
$("#user_postal_code").jpostal({
  postcode : [ "#user_postal_code" ],
  address  : {
                 "#user_address" : "%3%4%5",
               }
})
</script>
