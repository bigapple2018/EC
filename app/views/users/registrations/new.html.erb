<div class ="container">
  <div class="row">
    <div class="col-md-12">
      <div class="form_div">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "name_kana",:placeholder => "名前(姓)" %>
            <%= f.text_field :first_name, autocomplete: "name_kana",:placeholder => "名前(名)" %>
          </div>
          <div class="field">
            <%= f.text_field :last_kana, autocomplete: "name_kana",:placeholder => "名前(姓・カナ)" %>
            <%= f.text_field :first_kana, autocomplete: "name_kana",:placeholder => "名前(名・カナ)" %>
          </div>
          <div class="field">
            <%= f.text_field  :postal_code, autocomplete: "postal_code", :placeholder => "郵便番号" %>
          </div>
          <div class="field">
            <%= f.text_field :address, autocomplete: "address", :placeholder => "住所" %>
          </div>
          <div class="field">
            <%= f.text_field  :tell, autocomplete: "tell", :placeholder => "電話番号" %>
          </div>
          <br>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off" , :placeholder => "パスワード" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "パスワード(確認)" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
