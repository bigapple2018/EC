<div class="container">
  <div>
    <h1 class="head-text">タイトル編集</h1>
  </div>
  <div>
    <%= form_for(@cd_item, url: admins_item_cd_item_path) do |f| %>
      <table class="table">
        <tr>
          <td>CD名</td>
          <td><%= f.text_field :cd_title, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>収録曲</td>
          <td><%= f.add_nested_fields_link :songs, '曲追加', class: 'btn btn-primary', role: 'button' %></td>
        </tr>
        <tr>
          <td colspan="2">
            <!--子供要素の入力欄-->
            <%= f.nested_fields_for :songs, wrapper_tag: :table,class: 'table table-border' do |q| %>
              <tr>
                <td>
                  <%= q.text_field :song_number,:placeholder => "曲番号",class: 'form-control' %>
                </td>
                <td>
                  <%= q.text_field :song_title,:placeholder => "曲タイトル",class: 'form-control' %>
                </td>
                <td>
                  <%= q.remove_nested_fields_link '曲削除', class: 'btn btn-danger', role: 'button' %>
                </td>
              </tr>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "戻る", admins_items_path,class:"btn blue-gray-btn" %>
      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
