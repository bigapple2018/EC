<h1 class="head-text">CD新規追加</h1>


<!-- 下記の様に指定することで、adminのコントローラからインスタンス変数を持ってくることができる -->
<%= form_for([:admins, @item]) do |f| %>

<div class="image-new">
	<%= f.attachment_field :image %>
</div>

<table class="admin_item_new">
  <tbody>
		<tr>
			<td>アーティスト</td>
			<td><%= f.text_field :artist %></td>
		</tr>
		<tr>
			<td>シングル・アルバム名</td>
			<td><%= f.text_field :title_name %></td>
		</tr>
		<tr>
			<td>レーベル名</td>
			<td><%= f.text_field :label %></td>
		</tr>
		<tr>
			<td>ジャンル</td>
			<td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
			</td>
		</tr>
		<tr>
			<td>値段</td>
			<td><%= f.number_field :price %></td>
		</tr><br>
		<tr>
			<td>在庫数</td>
			<td><%= f.number_field :stock %></td>
		</tr>
		<tr>
			<td>曲名</td>
			<td>
			  <%= f.add_nested_fields_link :cd_items, 'Add new', class: 'btn btn-primary', role: 'button' %>
			</td>

			<table class="table_table-striped_table-bordered_table-hover">
				<tbody class="add-text">
					<%= f.nested_fields_for :cd_items, wrapper_tag: :tr do |q| %>
					<td><%= q.text_field :cd_title,     class: 'form-control' %></td>
					<td><%= q.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %></td>
					<% end %>
				</tbody>
			</table>
		</tr>
  </tbody>
</table>

<div class="edit-back">
	<%= f.submit '投稿',class: 'btn btn-primary' %>
	<%= link_to "戻る", admins_items_path(@item), class: 'btn btn-primary' %>
</div>

<% end %>