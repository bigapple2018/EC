<h1 class="head-text">CD編集画面</h1>


<!-- 下記の様に指定することで、adminのコントローラからインスタンス変数を持ってくることができる -->
<%= form_for([:admins, @item]) do |f| %>

<table class="admin_item_new">
	<tbody>
		<tr>
			<td>アーティスト</td>
			<td><%= f.text_field :artist %></td>
		</tr>
		<tr>
			<td>シングル・アルバム名</td>
			<td><%= f.text_field :title_name %></td>
		</tr>
		<tr>
			<td>レーベル名</td>
			<td><%= f.text_field :label %></td>
		</tr>
		<tr>
			<td>ジャンル</td>
			<td>
				<%= f.select :genre_id, [["J-Pop", "J-Pop"], ["K-Pop", "K-Pop"], ["R&B/ソウル", "R&B/ソウル"], ["ダンス", "ダンス"], ["Jazz", "Jazz"], ["Pop", "Pop"], ["Rock", "Rock"], ["その他", "その他"]] ,class:"form-control" %></td>
			</tr>
			<tr>
			<td>収録曲</td>
			<td><%#= f.text_field :song_title %></td>
		</tr>
		<tr>
			<td>値段</td>
			<td><%= f.text_field :price %></td>
		</tr>
		<tr>
			<td>在庫数</td>
			<td><%= f.text_field :stock %></td>
		</tr>
	</tbody>
</table>

<div class="edit-back">
	<%= f.submit '更新', class: 'btn btn-primary' %>
	<%= link_to "戻る", admins_items_path(@item), class: 'btn btn-primary' %>
</div>


<% end %>